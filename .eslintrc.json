{
  "extends": [
    "next/core-web-vitals",
    "plugin:unicorn/recommended",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.[t]s?(x)"],
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": ["error"]
      }
    },
    {
      "files": ["*.config.js"],
      "rules": {
        "unicorn/prefer-module": "off"
      }
    }
  ],
  "rules": {
    "unicorn/no-null": "off"
  }
}
